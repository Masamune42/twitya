{% extends 'base.html.twig' %}

{% block container %}
	<h1>Inscription - Twitya</h1>
	<p>Inscrivez-vous sur notre site Twitya</p>
	<hr class="mb-3">

	<div class="row">
		<div class="col-lg-3 col-md-2"></div>
		<div class="col-lg-6 col-md-8">
			{% include "includes/_alerts.html.twig" %}
			{{ form_start(form) }}
			<form>
				<div class="form-group mb-3">
					<label for="inputEmail">Adresse Email</label>
					{{ form_widget(form.email) }}
					<small id="emailHelp" class="form-text text-muted">Veuillez conserver votre adresse uniquement pour vous.</small>
				</div>
				<div class="form-group mb-3">
					<label for="inputPseudo">Pseudo</label>
					{{ form_widget(form.username) }}
				</div>
				<div class="form-group mb-3">
					<label for="InputPassword">Mot de passe</label>
					{{ form_widget(form.password) }}
				</div>
				<div class="form-group mb-3">
					<label for="InputPasswordConfirm">Confirmation du mot de passe</label>
					{{ form_widget(form.passwordConfirm) }}
				</div>
				<button type="submit" class="btn btn-primary">Se connecter</button>
			</form>
			{{ form_end(form) }}
		</div>
		<div class="col-lg-2 col-md-2"></div>
	</div>
{% endblock %}
