{% extends 'base.html.twig' %}

{% block container %}
	<h1>Connexion - Twitya</h1>
	<p>Connectez-vous sur notre site Twitya</p>
	<hr class="mb-3">

	<div class="row">
		<div class="col-lg-3 col-md-2"></div>
		<div class="col-lg-6 col-md-8">
			{% include "includes/_alerts.html.twig" %}
			<form action="{{ path('app_security_login') }}" method="post" >
				<div class="form-group mb-2">
					<label for="inputEmail">Adresse Email</label>
					<input type="email" name="_username" value="{{ lastUsername }}" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Adresse Email">
					<small id="emailHelp" class="form-text text-muted">Veuillez conserver votre adresse uniquement pour vous.</small>
				</div>
				<div class="form-group mb-2">
					<label for="InputPassword">Mot de passe</label>
					<input type="password" name="_password" class="form-control" id="InputPassword" placeholder="Indiquez votre mot de passe">
				</div>
				<button type="submit" class="btn btn-primary">Se connecter</button>
			</form>
		</div>
		<div class="col-lg-2 col-md-2"></div>
	</div>
{% endblock %}
