<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Twitya</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <a class="nav-item nav-link {% if app.request.getPathInfo == "/" %}active{% endif %}" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
                    {% if app.user %}
                        <a class="nav-item nav-link" href="#">Mon profil</a>
                        <a class="nav-item nav-link" href="#">Mes messages</a>
                        <a class="nav-item nav-link" href="#">Paramètres</a>
                        <a class="nav-item nav-link">Se déconnecter</a>
                    {% else %}
                        <a class="nav-item nav-link {% if app.request.getPathInfo == "/login" %}active{% endif %}" href="{{ path('app_security_login') }}">Connexion</a>
                        <a class="nav-item nav-link {% if app.request.getPathInfo == "/register" %}active{% endif %}" href="{{ path('app_security_register') }}">Inscription</a>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    {% block container %}Container par défaut{% endblock %}
</div>
</body>
</html>
